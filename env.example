# X-Ray API Configuration
# Copy this file to .env and update values as needed

# Database URL
# SQLite (default - no setup required):
DATABASE_URL=sqlite+aiosqlite:///./xray.db

# PostgreSQL (for production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/xray

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# SDK Settings (for client)
XRAY_API_URL=http://localhost:8000
XRAY_ENABLED=true
XRAY_SAMPLE_THRESHOLD=500
XRAY_SAMPLE_PER_REASON=50

# LLM API Settings (optional - for real LLM calls in examples)
OPENAI_API_KEY=sk-.... # Your OpenAI API key (optional - examples will use mock if not set)
OPENAI_MODEL=gpt-4o-mini  # Model to use for LLM steps

# Amazon Product API via OpenWebNinja (optional - for real product search)
# Get API key from: https://openwebninja.com
# Free tier available, no Amazon Associates account required
OPENWEBNINJA_API_KEY=your-api-key-here
AMAZON_COUNTRY=US  # US, UK, DE, FR, IT, ES, CA, JP, etc.

